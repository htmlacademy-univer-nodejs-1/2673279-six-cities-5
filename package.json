    "http-status-codes": "^2.3.0",
    "inversify": "^6.0.2",
    "mongoose": "^8.2.0",
    "pino": "^9.0.0",
    "pino-pretty": "^11.0.0",
    "reflect-metadata": "^0.2.2"
