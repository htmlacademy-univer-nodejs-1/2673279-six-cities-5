    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "5.59.0",
    "@typescript-eslint/parser": "5.59.0",
    "eslint": "8.39.0",
    "eslint-config-htmlacademy": "9.1.1",
    "json-server": "^0.17.4",
    "nodemon": "^3.1.0",
    "rimraf": "5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8"
  },
  "dependencies": {
